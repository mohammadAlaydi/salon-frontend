  "devDependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "lucide-react": "^0.553.0",
    "postcss": "^8.4.47",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "msw": {
    "workerDirectory": [
      "public"
